{{#with hotel}}
    <section id="viewhotelDetails">
        <h2>Details</h2>
        <div class="hotel-ticket">
            <div class="hotel-left">
                <img src="{{imageUrl}}"
                     alt="">
            </div>
            <div class="hotel-right">
                <div>
                    <h3>{{name}}</h3>
                </div>
                <div>
                    {{city}}
                </div>
                <p><span>Free rooms: {{freeRooms}}</span></p>
                {{#if isUser}}
                    {{#if isOwner}}
                        <a href="/booking/delete/{{_id}}" class="remove">Delete</a>
                        <a href="/booking/edit/{{_id}}" class="edit">Edit</a>
                    {{else}}
                        {{#if isBooked}}
                            <p><span class="green">You already have booked a room</span></p>
                        {{else}}
                            {{#if hasRooms}}
                                <a href="/booking/book/{{_id}}" class="book">Book</a>
                            {{/if}}

                        {{/if}}
                    {{/if}}
                {{/if}}

            </div>

        </div>
    </section>
{{/with}}

